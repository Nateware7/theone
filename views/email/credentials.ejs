<h1>Your Purchased Accounts</h1>
<% purchasedItems.forEach(item => { %>
  <div class="credential-box">
    <h3><%= item.name %></h3>
    <p>Platform: <%= item.platform %></p>
    <p>Email: <code><%= item.email %></code></p>
    <p>Password: <code><%= item.password %></code></p>
    <a href="/login?platform=<%= item.platform %>" class="login-button">
      Login to <%= item.platform %>
    </a>
  </div>
<% }); %>
<p class="warning">⚠️ This email contains sensitive information. Do not share it with anyone.</p>