<%- include('partials/header') -%>
<body style="margin: 0; padding: 0; background-color: #f6f6f6;">
    <center style="width: 100%; background-color: #f6f6f6;">
        <table align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px; border-collapse: collapse;">
            <!-- Logo Header -->
            <tr>
                <td style="padding: 30px 0; text-align: center;">
                    <img src="/css/imgs/myuncle.png" alt="MyUncle Logo" style="height: 50px; width: auto; border: 0; display: block; margin: 0 auto;">
                </td>
            </tr>

            <!-- Main Content -->
            <tr>
                <td style="padding: 30px 25px; background-color: #ffffff; border-radius: 8px;">
                    <h1 style="margin: 0 0 25px 0; color: #333333; font-family: Arial, sans-serif;">Your Purchased Content</h1>

                    <!-- Account Credentials Section -->
<!-- views/credentials.ejs - FIXED -->
<% purchasedItems.forEach(item => { %>
    <% if(item.itemType === 'feedItem') { %>
      <div class="credential-card">
        <p>Email: <code><%= item.email %></code></p>
        <p>Password: <code><%= item.password %></code></p>
      </div>
    <% } %>
  <% }); %>

                    <!-- Program Downloads Section -->
                    <% const programs = purchasedItems.filter(item => item.itemType === 'programItem') %>
                    <% if (programs.length > 0) { %>
                        <div style="margin: 30px 0;">
                            <h2 style="color: #333333; margin: 0 0 15px 0;">Program Downloads</h2>
                            <% programs.forEach(program => { %>
                                <div style="background: #f8f9fa; border-radius: 6px; margin-bottom: 15px; padding: 15px;">
                                    <h3 style="color: #2c3e50; margin: 0 0 10px 0;"><%= program.title %></h3>
                                    <a href="<%= program.downloadLink %>" 
                                       style="display: inline-block; background: #0126f5; color: #ffffff; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;">
                                        Download Now
                                    </a>
                                    <p style="color: #7f8c8d; margin: 10px 0 0 0;">
                                        Valid until: <%= new Date(Date.now() + 604800000).toLocaleDateString() %>
                                    </p>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>

                    <!-- Warning Message -->
                    <div style="background: #fff3cd; border-radius: 6px; margin-top: 25px; padding: 15px;">
                        <p style="margin: 0; color: #856404; text-align: center;">
                            ⚠️ This email contains sensitive information. Do not share it with anyone.
                        </p>
                    </div>
                </td>
            </tr>

            <!-- Footer -->
            <tr>
                <td style="padding: 20px 0; text-align: center; color: #95a5a6;">
                    <p style="margin: 0;">© 2025 MyUncle. All rights reserved.</p>
                </td>
            </tr>
        </table>
    </center>
</body>
</html>