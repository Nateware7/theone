<%- include('partials/header') -%>
<body style="margin: 0; padding: 0; background-color: #f6f6f6;">
    <center style="width: 100%; background-color: #f6f6f6;">
        <table align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px; border-collapse: collapse;">
            <!-- Logo Header -->
            <tr>
                <td style="padding: 30px 0; text-align: center;">
                    <img src="/css/imgs/myuncle.png" alt="Roni Logo" style="height: 50px; width: auto; border: 0; display: block; margin: 0 auto;">
                </td>
            </tr>

            <!-- Main Content -->
            <tr>
                <td style="padding: 30px 25px; background-color: #ffffff; border-radius: 8px;">
                    <h1 style="margin: 0 0 25px 0; color: #333333; font-family: Arial, sans-serif;">Your Purchased Accounts</h1>

                    <% purchasedItems.forEach(item => { %>
                        <div style="background: #f8f9fa; border-radius: 6px; margin-bottom: 20px; padding: 15px;">
                            <h3 style="margin: 0 0 10px 0; color: #2c3e50;"><%= item.username %></h3>
                            <p style="margin: 5px 0; color: #7f8c8d;">
                                <strong>Platform:</strong> <%= item.platform %>
                            </p>
                            <p style="margin: 5px 0; color: #7f8c8d;">
                                <strong>Email:</strong> 
                                <code style="background: #ecf0f1; padding: 2px 5px; border-radius: 3px;"><%= item.email %></code>
                            </p>
                            <p style="margin: 5px 0 15px 0; color: #7f8c8d;">
                                <strong>Password:</strong> 
                                <code style="background: #ecf0f1; padding: 2px 5px; border-radius: 3px;"><%= item.password %></code>
                            </p>
                            <a href="<%= process.env.BASE_URL %>/login/<%= item.tempToken %>" 
                               style="display: inline-block; background: #0126f5; color: #ffffff; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;">
                                Login to <%= item.platform %>
                            </a>
                        </div>
                    <% }); %>

                    <!-- Warning Message -->
                    <div style="background: #fff3cd; border-radius: 6px; margin-top: 25px; padding: 15px;">
                        <p style="margin: 0; color: #856404; text-align: center;">
                            ⚠️ This email contains sensitive information. Do not share it with anyone.
                        </p>
                    </div>
                </td>
            </tr>

            <!-- Footer -->
            <tr>
                <td style="padding: 20px 0; text-align: center; color: #95a5a6;">
                    <p style="margin: 0;">© 2025 Roni. All rights reserved.</p>
                </td>
            </tr>
        </table>
    </center>
</body>
</html>